[Unit]
Description=QQ Bot Scheduler Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=coding_hong
Group=coding_hong
WorkingDirectory=/home/coding_hong/Documents/QQBot/SDU_DeepSeek
ExecStart=/home/coding_hong/miniconda3/envs/qqbot/bin/python /home/coding_hong/Documents/QQBot/SDU_DeepSeek/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# 环境变量
Environment=PYTHONPATH=/home/coding_hong/Documents/QQBot/SDU_DeepSeek
Environment=PYTHONUNBUFFERED=1

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/coding_hong/Documents/QQBot/SDU_DeepSeek

[Install]
WantedBy=multi-user.target
